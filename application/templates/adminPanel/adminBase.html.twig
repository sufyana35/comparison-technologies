<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
		<meta name="robots" content="noindex, nofollow">
		<meta name="viewport" content="width=1152px">

        <title>{% block title %}Admin Panel{% endblock %}</title>
		
        <link rel="icon" href="/images/favicon.png">
        
        <script src="/js/jquery.js"></script>
        <script src="/js/jquery_ui.js"></script>
		<script src="https://cdn.tiny.cloud/1/sahrjvdnguqfh9jrtmesorkokbpyx0m9bbkrafmxuiev4nur/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="/js/perfect_scrollbar.js"></script>
        <script src="/js/featherlight.js"></script>
        <script src="/js/admin.js"></script>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}

		<link href="/images/favicon.png" rel="icon" sizes="32x32" type="image/png">
		<link href="/images/appicon.png" rel="apple-touch-icon-precomposed" sizes="152x152" type="image/png">

		<link href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=latin-ext" rel="stylesheet">
		<link href="//fonts.googleapis.com/css?family=Roboto+Mono:100,100i,300,300i,400,400i,500,500i,700,700i&amp;subset=latin-ext" rel="stylesheet">
		<link href="/css/normalize.css" rel="stylesheet">
		<link href="/css/perfect_scrollbar.css" rel="stylesheet">
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
		<link href="/css/featherlight.css" rel="stylesheet">
		<link href="/css/jquery_ui.css" rel="stylesheet">
		<link href="/css/admin.css" rel="stylesheet">

		<script>
			window.NSS = {
				touch: false
			};
		</script>
    </head>
    <body>
        <div id="container">
			<nav id="sidebar" class="ps-container ps-active-y" data-ps-id="3ef5f212-f766-9601-67c3-b04d2da982f9">
				<ul>
					<li>
						<a href="{{ url('admin') }}">
							<img src="/images/dhs_logo.svg">
							DHS Admin Panel <span class="small">v1.00</span>
						</a>
					</li>
					<li class="gap"></li>
					<li><a href="{{ url('admin') }}"><i class="fa fa-home"></i>Home</a></li>
					<li class="gap"></li>
					<li><a href="/admin/contacts"><i class="fa fa-phone"></i>Staff Contacts</a></li>
					<li class="gap"></li>
					<li><a href="/admin/profit-calculator"><i class="fa fa-money"></i>Profit Calculator</a></li>
					<li class="gap"></li>

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_ORDERS") %}
						<li><a href="/admin/orders"><i class="fa fa-shopping-basket"></i>Orders</a></li>
					{% endif %}
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_CUSTOMERS") %}
						<li><a href="/admin/customers"><i class="fa fa-users"></i>Customers</a></li>
					{% endif %}
					{% if is_granted("ROLE_CUSTOMERS") or is_granted("ROLE_ORDERS") %}
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_EMAILS") %}
						<li><a href="/admin/email/exclusions"><i class="fa fa-envelope-o"></i>Email Exclusions</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_APPLIANCES") %}
						<li><a href="/admin/appliances"><i class="fa fa-folder-open-o"></i>Appliances</a></li>
					{% endif %}
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_CATEGORIES") %}
						<li><a href="/admin/categories"><i class="fa fa-folder-open"></i>Categories</a></li>
					{% endif %}
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_BRANDS") %}
						<li><a href="/admin/brands"><i class="fa fa-flag"></i>Brands</a></li>
					{% endif %}
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_PRODUCTS") %}
						<li><a href="/admin/products"><i class="fa fa-product-hunt"></i>Products</a></li>
						<li><a href="/admin/product-groups"><i class="fa fa-bandcamp"></i>Product Groups</a></li>
					{% endif %}
					{% if is_granted("ROLE_APPLIANCES") or is_granted("ROLE_CATEGORIES") or is_granted("ROLE_BRANDS") or is_granted("ROLE_PRODUCTS") %}
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_DELIVERY") %}
						<li><a href="/admin/countries"><i class="fa fa-globe"></i>Delivery Countries</a></li>
						<li><a href="/admin/delivery-couriers"><i class="fa fa-truck"></i>Delivery Couriers</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SHOPPING") %}
						<li><a href="/admin/google"><i class="fa fa-google"></i>Google Shopping</a></li>
						<li><a href="/admin/bing"><i class="fa fa-windows"></i>Bing Shopping</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_BLOGS") %}
						<li><a href="/admin/blog-categories"><i class="fa fa-book"></i>Blog Categories</a></li>
						<li><a href="/admin/blog-posts"><i class="fa fa-pencil-square-o"></i>Blog Posts</a></li>
						<li><a href="/admin/blog-images"><i class="fa fa-picture-o"></i>Blog Images</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_FAQS") %}
						<li><a href="/admin/site-faqs"><i class="fa fa-question"></i>Site FAQs</a></li>
						<li><a href="/admin/site-faqs/groups"><i class="fa fa-question-circle"></i>Site FAQs Group</a></li>
						<li class="gap"></li>
					{% endif %}
					
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_REDIRECTS") %}
						<li><a href="/admin/redirects"><i class="fa fa-chain-broken"></i>Redirects</a></li>
						<li class="gap"></li>
					{% endif %}
					
					{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_PAGES") %}
						<li><a href="/admin/pages"><i class="fa fa-file-text-o"></i>Pages</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") %}
						<li><a href="/admin/users"><i class="fa fa-user"></i>Users</a></li>
						<li class="gap"></li>
					{% endif %}

					{% if is_granted("ROLE_ADMIN") %}
						<li><a href="/admin/settings"><i class="fa fa-cogs"></i>Settings</a></li>
						<li class="gap"></li>
					{% endif %}

					<li><a href="/admin/logout" onclick="return confirm('Do you want to log out?');"><i class="fa fa-power-off"></i>Log Out</a></li>
				</ul>
			</nav>
			<div id="main">
				<header>
					<ul>
						<li>
							<a href="javascript:void(0)">{% block menuTitle %}{% endblock %}</a>
						</li>
						<li class="float-right">
							<a href="/admin/logout" onclick="return confirm('Do you want to log out?');"><i class="fa fa-power-off"></i>Log Out</a>
						</li>
						<li class="float-right">
							<a href="https://www.dhsspares.co.uk/" rel="noopener" target="_blank"><i class="fa fa-external-link"></i>Main Site</a>
						</li>
						<li class="float-right">
							<a href="javascript:void(0)" onclick="window.prompt('Your IP address is:', $(this).text()); return false;"><i class="fa fa-laptop"></i>{{ getIpAddress() }}</a>
						</li>
						<li class="float-right">
							<a href="javascript:void(0)"><i class="fa fa-clock-o"></i>{{ getCurrentTime() }}</a>
						</li>
						<li class="float-right">
							<a href="javascript:void(0)"><i class="fa fa-user"></i>{{ app.user.name|default(null) }}</a>
						</li>
					</ul>
				</header>
                {% block body %}{% endblock %}
			</div>
		</div>
    </body>
</html>
